<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BharatEpaisaApp.Pages.Views.LoadingView"
             BackgroundColor="#F5F5F5" Opacity="0.8">
    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <ActivityIndicator IsRunning="True" Color="{DynamicResource Primary}" />
        <Label Text="In Process..." HorizontalOptions="Center" VerticalOptions="Center" FontSize="20" />
    </StackLayout>
</ContentView>
